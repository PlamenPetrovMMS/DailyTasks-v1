<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="Base.Theme.DailyTasks" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="Theme.DailyTasks" parent="Base.Theme.DailyTasks" />

    <!-- FloatingActionButton Custom Shape Style -->
    <style name="FAB_CustomShape" parent="Widget.MaterialComponents.FloatingActionButton">
        <!-- Reference a shape appearance -->
        <item name="shapeAppearance">@style/FAB_ShapeAppearance</item>
    </style>

    <!-- FloatingAactionButton Corner Shape Definition -->
    <style name="FAB_ShapeAppearance" parent="ShapeAppearance.Material3.SmallComponent">
        <!-- Change cornerSize to control roundness -->
        <item name="cornerSize">5dp</item>  <!-- 12dp For a slightly rounded square -->
                                            <!-- 0dp For Sharp square corners -->
    </style>
    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/input_cursor</item>
    </style>

</resources>
